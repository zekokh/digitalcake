<div class="container">
  <% if notice %>
      <br/>

      <div class="alert alert-info"> <%= notice %> </div>
  <% end %>
  <% if !@orders.blank? %>
  <table class="table table_toche">
    <caption>
<button type="button" class="btn btn-default btn-lg">ПЕРЕДАТЬ В ЦЕХ</button>
      <br> <br>
      <form action="/get">
        <input class="btn btn-warning btn-lg" type="submit" value="ПРОВЕРИТЬ ЗАЯВКИ" />
      </form>

    </caption>
    <thead>
    <tr>
      <th>№</th>
      <th>Имя</th>
      <th>Телефон</th>
      <th>Цена</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>

    <% @orders.each do |order| %>
    <tr>
      <th scope="row"><%= order.id_order %></th>
      <td><%= order.name_of_customer %></td>
      <td><%= order.phone_of_customer %></td>
      <td>

        <form action="/print/<%= order.id %>">
          <input class="btn btn-primary btn-lg" type="submit" value="НАПЕЧАТАТЬ" />
        </form>
      </td>
      <td>
        <form action="/pay/<%= order.id %>">
          <input class="btn btn-success btn-lg" type="submit" value="ОПЛАТИЛ" />
        </form>
      </td>
      <td>
        <form action="/cancel/<%= order.id %>">
          <input class="btn btn-danger btn-lg" type="submit" value="ОТМЕНА" />
        </form>
      </td>
    </tr>
    <% end %>

    </tbody>
  </table>
<% else %>
      <caption>Пока тут ничего нет.</caption>
      <br> <br>
      <form action="/get">
        <input class="btn btn-default btn-lg" type="submit" value="ПРОВЕРИТЬ ЗАЯВКИ" />
      </form>
  <% end %>
</div> <!-- /container -->

